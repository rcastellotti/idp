\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tumlang}[2021/09/25 TUM language]

\RequirePackage[english,ngerman]{babel}
\RequirePackage[english=usenglishmax,ngerman=ngerman-x-latest]{hyphsubst}


% language options
\DeclareOption{english}{
	\AtEndOfPackage{\selectlanguage{english}}
	\AtBeginDocument{\selectlanguage{english}}
}
\DeclareOption{german}{
	\AtEndOfPackage{\selectlanguage{ngerman}}
	\AtBeginDocument{\selectlanguage{ngerman}}
}
\DeclareOption{ngerman}{
	\AtEndOfPackage{\selectlanguage{ngerman}}
	\AtBeginDocument{\selectlanguage{ngerman}}
}


% unknown options
\DeclareOption*{}

\ExecuteOptions{ngerman}
\ProcessOptions\relax


\newcommand{\localetext}[2]{\iflanguage{ngerman}{#2}{#1}}
\newcommand*{\localemacro}[3]{%
	\ifdefined\captionsenglish
		\addto\captionsenglish{\def#1{#2}}%
		\addto\captionsngerman{\def#1{#3}}%
	\else
		\AtBeginDocument{%
			\addto\captionsenglish{\def#1{#2}}%
			\addto\captionsngerman{\def#1{#3}}%
		}%
	\fi
}

\endinput
